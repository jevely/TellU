<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@drawable/main_back"
        tools:context=".activity.ContentActivity">

    <include layout="@layout/title_layout"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/content_tip"/>

    <EditText
            android:id="@+id/content_edit"
            android:gravity="top|left"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_content_nomal"
            android:textColor="@color/text_title_small"
            android:hint="@string/content_tip2"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:padding="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_back"
            android:minHeight="200dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/content_tip"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp"
            android:textSize="@dimen/text_content_nomal"
            android:textColor="@color/text_cotnent"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>

</LinearLayout>